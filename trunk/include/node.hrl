-record(node, {
        name                %% 节点名称
        ,host               %% 梆定域名
        ,port               %% 监听端口
        ,hidden = 0         %% 是否隐藏(0:显示 1:隐藏)
        ,num_role = 0       %% 当前在线角色数
        ,num_proc = 0       %% 当前进程数
        ,load = 99999999999 %% 当前节点负载
    }
).
